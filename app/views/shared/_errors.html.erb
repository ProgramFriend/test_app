<% if obj.errors.any? %>
  <div class="row">
    <div class="col-xs-8 col">
      <div class="panel panel-danger" font-weight="bold">
        <div class="heading">
          <h2 class="panel-title">
            <%= pluralize(obj.errors.count, "errors") %>
            prevented the article from getting created
          </h2>
          <div class="panel-body">
            <ul>
              <% obj.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>